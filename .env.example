# Groq API Key for TTS (Orpheus)
GROQ_API_KEY=your_groq_api_key_here

# Enable playing audio using ffplay
ENABLE_PLAYBACK=true

# Default voice for Orpheus TTS
DEFAULT_VOICE=daniel

# Default speech speed for wake+command audio
DEFAULT_SPEED=0.9

# Delay after wake phrase before command playback (ms)
WAKE_DELAY_MS=2500

# Optional pause before any playback starts (ms)
PRE_PAUSE_MS=0

# Optional pre-playback system volume (0-100)
PRE_VOLUME=

# Optional Groq STT model for duplex transcription
GROQ_STT_MODEL=whisper-large-v3-turbo

# macOS ffmpeg avfoundation input selector (default mic is usually :0)
MIC_INPUT=:0

# Port to run the server on
PORT=3000
