# TTS provider: groq | voicebox
TTS_PROVIDER=voicebox

# Groq API Key for TTS (Orpheus) (used when TTS_PROVIDER=groq)
GROQ_API_KEY=your_groq_api_key_here

# Voicebox local API settings (used when TTS_PROVIDER=voicebox)
VOICEBOX_URL=http://127.0.0.1:17493
VOICEBOX_PROFILE_ID=
VOICEBOX_MODEL_SIZE=0.6B
# Optional safety fallback if 0.6B fails to load on your install
VOICEBOX_FALLBACK_MODEL_SIZE=1.7B
VOICEBOX_LANGUAGE=en

# Enable playing audio using ffplay
ENABLE_PLAYBACK=true

# Default voice for Orpheus TTS
DEFAULT_VOICE=daniel

# Default speech speed for wake+command audio
DEFAULT_SPEED=0.9

# Delay after wake phrase before command playback (ms)
WAKE_DELAY_MS=2500

# Optional pause before any playback starts (ms)
PRE_PAUSE_MS=0

# Optional pre-playback system volume (0-100)
PRE_VOLUME=

# Optional Groq STT model for duplex transcription
GROQ_STT_MODEL=whisper-large-v3-turbo

# macOS ffmpeg avfoundation input selector (default mic is usually :0)
MIC_INPUT=:0

# Port to run the server on
PORT=3000
